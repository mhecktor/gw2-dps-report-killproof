{
    "manifest_version": 3,
    "name": "GW2 DPS Report KPs",
    "description": "This extension will show the killproofs of the current DPS Report",
    "version": "0.1",
    "icons": {
        "16": "/images/icon16.png",
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon16.png",
            "32": "/images/icon32.png",
            "48": "/images/icon48.png",
            "128": "/images/icon128.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [        
        "https://killproof.me/*"
    ],
    "background": {
        "service_worker": "js/bg_page.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://dps.report/*"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "js/data.js",
                "js/injector.js"
            ],
            "run_at": "document_end"
        }
    ]
}